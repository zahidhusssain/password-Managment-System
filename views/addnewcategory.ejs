<%-include('header')%>
      <div class="container">
        
        <div class="row">
            <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading"><div class="panel-title">Add New Password Category</div>
                </div>  
           <div class="panel-body" >
               <form action="/addnewcategory" id="newpasswordForm" class="form-horizontal" method="post"  role="form" >
                 
                   <div class="form-group">
                     <% if(errors !='') { %>
                       <p style="text-align: center; color:red;"> <%= errors.passcategory.msg %> </p>
                      <% } %>
                      <% if(msg !='') { %>
                        <p style="text-align: center; color:red;"> <%= msg %> </p>
                       <% } %>
                      
                      <% if(success !='') { %>
                        <p style="text-align: center; color:seagreen;"> <%= success %> </p>
                       <% } %>
                       <label for="uname" class="col-md-3 control-label">Category Name</label>
                       <div class="col-md-9">
                           <input type="text" class="form-control" name="passcategory" placeholder="Enter Your Password Category Name">
                       </div>
                   </div>
                     <div class="form-group">
                     <div class="col-md-offset-3 col-md-9">
                     <button type="submit" class="btn btn-primary " value="Add Category">Add Category</button>
                     </div></div>
                     <p ><a  href="/passCategory">View All Category Lists</a></p>
                   </form>
               </div>
             </div>
         </div>
       </div>
     </div>
<%-include('footer')%>