<%-include('header1')%>
<div class="container">
      <div class="row">
        <h2 class="text-center"><%= title%></h2>
          <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
              <div class="panel panel-info">
                  <div class="panel-heading">
                      <div class="panel-title">Login Form</div>
                       </div>  
                  <div class="panel-body" >
                     
                      <form action="/" id="loginForm" class="form-horizontal" method="post"  role="form" >
                        <% if(msg !=''){ %>
                          <div id="signupalert"  class="alert alert-danger">
                            <p style="text-align: center; color: red;">
                              <%= msg %></p>
                          </div>
                          <% } %>
                              
                          <div class="form-group">
                              <label for="uname" class="col-md-3 control-label">User Name</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="uname" placeholder="Enter Your User Name">
                              </div>
                          </div>
                          <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" placeholder="Enter Your Password">
                            </div>
                            </div>
                            <div class="form-group"></div>
                            <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn btn-primary" value="login" >Login</button></div></div>
                            <p class="ex" >   If You don't have account !<a class="ex" href="/signup">Creat New Account</a></p>
                          </form>
                      </div>
                    </div>
                </div>
              </div>
        </div>                   
<%-include('footer')%>